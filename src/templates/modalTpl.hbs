<div class="hbs" id='{{id}}'>
  <div class="thumb" >
    <img class="modal-icon" src="{{images.[3].url}}" alt='{{name}}'>
  </div>

  <div class="modal-info">
    <div class="modal-img-thumb">
      <img class="modal-img" src="{{images.[3].url}}" alt="{{name}}">
    </div>
    <ul class="modal-details">
      <li class="modal-item">
        <p class="modal-item__header">INFO</p>
        <p class="modal-item__descr">{{info}}</p>
      </li>
      <li class="modal-item">
        <p class="modal-item__header">WHEN</p>
        <p class="modal-item__descr">{{dates.start.localDate}}<br>{{dates.start.localTime}} ({{dates.timezone}})</p>
      </li>
      <li class="modal-item">
        <p class="modal-item__header">WHERE</p>
        <p class="modal-item__descr">{{_embedded.venues.[0].city.name}},
          {{_embedded.venues.[0].country.name}}<br>{{_embedded.venues.[0].address.line1}}</p>
      </li>
      <li class="modal-item">
        <p class="modal-item__header">WHO</p>
        <p class="modal-item__descr">{{name}}</p>
      </li>
      <li class="modal-item">
        <p class="modal-item__header">PRICES</p>
        <div class="price">
          <svg class="barcode" viewBox="0 0 44 32">
            <path d="M4.91 1.269H0V30.73h4.91V1.269zm12.35 0h-4.911V30.73h4.911V1.269zm7.439 0h-4.91V30.73h4.91V1.269zm19.491
                        0h-7.291V30.73h7.291V1.269zm-34.371 0h-2.38V30.73h2.38V1.269zm19.641 0h-2.38V30.73h2.38V1.269zm4.91
                        0h-2.38V30.73h2.382V1.269z" fill="#0E0E0E" />
          </svg>
          <p class="modal-item__descr price-descr">Standart 300-500 UAH</p>
        </div>
        <button class="modal-btn" type="button">BUY TICKETS</button>
        <div class="price">
          <svg class="barcode" viewBox="0 0 44 32">
            <path d="M4.91 1.269H0V30.73h4.91V1.269zm12.35 0h-4.911V30.73h4.911V1.269zm7.439 0h-4.91V30.73h4.91V1.269zm19.491 
                  0h-7.291V30.73h7.291V1.269zm-34.371 0h-2.38V30.73h2.38V1.269zm19.641 0h-2.38V30.73h2.38V1.269zm4.91 
                  0h-2.38V30.73h2.382V1.269z" fill="#0E0E0E" />
          </svg>
          <p class="modal-item__descr price-descr">VIP 1000-1500 UAH</p>
        </div>
        <button class="modal-btn" type="button">BUY TICKETS</button>
      </li>
    </ul>
  </div>
</div>